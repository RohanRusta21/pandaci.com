---
import Button from "../Button.astro";
import clsx from "clsx";

interface Props {
    planName: string;
    planDescription: string;
    price: string;
    href: string;
    cta: string;
    features: string[];
}

const { planName, planDescription, price, href, features, cta } = Astro.props;
---

<div
    class={clsx(
        "-m-2 grid grid-cols-1 rounded-[2rem] ring-1 shadow-[inset_0_0_2px_1px_#ffffff4d]  max-lg:mx-auto max-lg:w-full max-lg:max-w-md",
        planName === "Pro" ? "ring-primary" : "ring-outline-variant",
    )}
>
    <div class="grid grid-cols-1 rounded-[2rem] p-2 shadow-md shadow-black/5">
        <div
            class="rounded-3xl bg-surface-high p-10 pb-9 ring-1 shadow-2xl ring-black/5"
        >
            <h2 class="text-sm font-semibold text-green-600">
                {planName}
                <span class="sr-only">plan</span>
            </h2>
            <p class="mt-2 text-sm/6 text-pretty text-on-surface-variant">
                {planDescription}
            </p>
            <div class="mt-8 flex items-center gap-4">
                <div class="text-5xl font-semibold text-on-surface">
                    ${price}
                </div>
                <div class="text-sm text-on-surface-variant">
                    <p>USD</p>
                    <p>per month</p>
                </div>
            </div>
            <div class="mt-8">
                <Button
                    plain={false}
                    color="green"
                    href={href}
                    aria-label={`Get started with the ${planName} plan`}
                >
                    {cta}
                </Button>
            </div>
            <div class="mt-8">
                <h3 class="text-sm/6 font-medium text-on-surface">
                    Highlights:
                </h3>
                <ul class="mt-3 space-y-3">
                    {
                        features.map((feature) => (
                            <li class="group flex items-start gap-4 text-sm/6 text-on-surface">
                                <span class="inline-flex h-6 items-center">
                                    <svg
                                        class="size-4 fill-gray-400 group-data-disabled:fill-gray-300"
                                        viewBox="0 0 16 16"
                                        fill="currentColor"
                                        aria-hidden="true"
                                        data-slot="icon"
                                    >
                                        <path d="M8.75 3.75a.75.75 0 0 0-1.5 0v3.5h-3.5a.75.75 0 0 0 0 1.5h3.5v3.5a.75.75 0 0 0 1.5 0v-3.5h3.5a.75.75 0 0 0 0-1.5h-3.5v-3.5Z" />
                                    </svg>
                                </span>
                                {feature}
                            </li>
                        ))
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

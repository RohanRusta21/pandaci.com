---
import clsx from "clsx";
import InfoIcon from "phosphor-astro/Info.astro";
import BooksIcon from "phosphor-astro/Books.astro";

interface Props {
    level: "check" | "info" | "knowledge";
}

const { level } = Astro.props;
---

<div
    class={clsx(
        "my-4 px-5 py-4 overflow-hidden rounded-xl flex gap-3 border",
        level === "check" &&
            "border-primary/20 bg-primary/10 prose-code:text-on-surface prose-code:font-semibold prose-code:bg-white/5 prose-code:rounded-lg prose-code:py-0.5 prose-code:px-1",
        level === "info" && "border-blue-500/20 bg-blue-500/10",
        level === "knowledge" && "border-green-500/20 bg-green-500/10 ",
    )}
>
    {
        level === "check" && (
            <svg
                class="text-primary size-5 shrink-0"
                xmlns="http://www.w3.org/2000/svg"
                width="32"
                height="32"
                fill="currentColor"
                viewBox="0 0 256 256"
            >
                <path d="M149.61,85.71l-89.6,88a8,8,0,0,1-11.22,0L10.39,136a8,8,0,1,1,11.22-11.41L54.4,156.79l84-82.5a8,8,0,1,1,11.22,11.42Zm96.1-11.32a8,8,0,0,0-11.32-.1l-84,82.5-18.83-18.5a8,8,0,0,0-11.21,11.42l24.43,24a8,8,0,0,0,11.22,0l89.6-88A8,8,0,0,0,245.71,74.39Z" />
            </svg>
        )
    }

    {
        level === "info" && (
            <InfoIcon class="text-blue-900 dark:text-blue-500 size-5 shrink-0" />
        )
    }

    {
        level === "knowledge" && (
            <BooksIcon class="text-green-900 dark:text-green-500 size-5 shrink-0" />
        )
    }

    <div
        class={clsx(
            "text-sm prose min-w-0",
            level === "check" && "text-green-900 dark:text-green-100",
            level === "info" && "text-blue-900 dark:text-blue-100",
            level === "knowledge" && "text-green-900 dark:text-green-100",
        )}
    >
        <slot />
    </div>
</div>
